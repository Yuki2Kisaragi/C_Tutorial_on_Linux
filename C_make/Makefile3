all: myapp

# Which compiler
CC = gcc
# マクロ初期化時に空白を入れても通る

# Where to install
INSTDIR = ./Output

# Where are include file kept
INCLUDE = .

# Options for development
CFLAGS = -g -ansi
# マクロ初期化時に空白を入れても通る。オプションでも空白入れても通る

# Options for release
# CFLAGS = -O -Wall -ansi

myapp: main.o 2.o 3.o
		$(CC) -o myapp main.o 2.o 3.o

main.o: main.c a.h
		$(CC) -I$(INCLUDE) $(CFLAGS) -c main.c

2.o: 2.c a.h b.h
		$(CC) -I$(INCLUDE) $(CFLAGS) -c 2.c

3.o: 3.c b.h c.h
		$(CC) -I$(INCLUDE) $(CFLAGS) -c 3.c

clean:
		-rm main.o 2.o 3.o

install: myapp
		@if [ -d $(INSTDIR) ]; \
			then \
			cp myapp  $(INSTDIR);\
			chmod a+x $(INSTDIR)/myapp;\
			chmod og-w $(INSTDIR)/myapp;\
			echo "Installed in $(INSTDIR)";\
		else \
			echo "Sorry $(INSTDIR) does not exist";\
		fi

